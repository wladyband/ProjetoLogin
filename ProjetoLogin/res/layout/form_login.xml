<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25c" 
    android:gravity="center">

    <TextView
        android:id="@+id/loginView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:text="Login" />

    <EditText
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/login"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/SenhaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginEditText"
        android:layout_below="@+id/login"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:text="Senha"/>

    <EditText
        android:id="@+id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/SenhaView"
        android:background="#fff"
        android:password="true"
        android:ems="10" />

    <Button
        android:id="@+id/entrar"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/senhaEditText"
        android:layout_below="@+id/senha"
        android:layout_marginTop="14dp"
        android:background="#A9F5F2"
        android:text="Button" />
    
</RelativeLayout>